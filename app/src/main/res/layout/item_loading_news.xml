<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_2"
        app:cardElevation="@dimen/dp_2">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view_image"
                android:layout_width="@dimen/headline_image_width"
                android:layout_height="@dimen/headline_image_height"
                android:background="@color/colorBackgroundGrey"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/text_view_headline_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/background_rounded_corner_dark_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_image"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/text_view_article_description"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/background_rounded_corner_dark_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/text_view_headline_title"
                app:layout_constraintTop_toBottomOf="@id/text_view_headline_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</layout>
